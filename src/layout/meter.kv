<Meter>:
    id: meter_screen
    name: "meter"
    MDBoxLayout:
        size_hint: 1, 1
        orientation: "vertical"
        on_touch_down:
            meter_screen.setup_points(args[1])
            
        LeafCamera:
            id: camera
            resolution: self.resolution
            allow_stretch: True
            keep_ratio: True
            play: False
        